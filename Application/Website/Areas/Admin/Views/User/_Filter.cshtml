@model EntityLayer.tblUserFilterModel

<div class="widget-box">
    <div class="widget-header widget-header-flat">
        <h4 class="widget-title">Search</h4>
    </div>
    <div class="widget-body">
        <div class="widget-main">
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, new { @class = "col-sm-3 control-label no-padding-right" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>
                </div>
                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-info">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Search
                        </button>
                        &nbsp; &nbsp; &nbsp;
                        <button type="reset" class="btn">
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            Reset
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



